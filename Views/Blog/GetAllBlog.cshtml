@model IEnumerable<crudappMvc.Models.Blog>

@{
    ViewData["Title"] = "GetAllBlog";
}

<h1>Get All Blogs</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateBlog">Create New</a>
</p>

<div class="row  gap-5 justify-content-center">
    @foreach (var item in Model)
    {
        
        
        <div class="col-md-4 mb-4  rounded">
            <div class="card border">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <p class="card-text"><small class="text-muted">Author: @Html.DisplayFor(modelItem => item.Author)</small></p>
                <div>

                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a>

                
                </div>
            </div>
        </div>








<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               Are you Sure this post is Deleted ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a type="button" class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Yes Delete </a>
            </div>
        </div>
    </div>
</div>
    }
</div>

